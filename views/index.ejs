<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Messageboard</title>
  </head>
  <body>
    <ul>
      <% messages.forEach((message) =>{ %>
      <li><%=message.user%>: <%=message.text%></li>
      <button><a href="/message/<%=message.id%>">View</a></button>
      <%});%>
    </ul>
    <button><a href="/new">Write new message</a></button>
  </body>
</html>
